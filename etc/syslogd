#!/usr/bin/env perl

use strict;
use warnings;
use IO::Socket::INET;
use Getopt::Long;

# Defaults
my $port = 514;
my $logfile = '/tmp/syslog.log';

# Get command-line options
GetOptions("port=i" => \$port, "file=s" => \$logfile) or die "Usage: $0 [--port <port_number>] [--file <CSV file>]\n";

# Create UDP socket
my $socket = IO::Socket::INET->new(
	LocalPort => $port,
	Proto => 'udp'
) or die "Could not create socket: $!\n";

print "Syslog server listening on UDP port $port...\n";

if(!-r $logfile) {
	# First run - put in the heading row
	open(my $log, '>', $logfile);
	print $log '"IP","facility","severity","msg"',
		"\n";
	close $log;
}

open(my $fout, '>>', $logfile);

while (1) {
	my $message;
	my $remote_address = $socket->recv($message, 1024);

	if ($remote_address) {
		my ($port, $ip) = unpack_sockaddr_in($remote_address);
		my $remote_ip = inet_ntoa($ip);
		chomp $message;
		
		# Extract PRI field
		if($message =~ /^<(\d+)>(.*)/) {
			my $pri = $1;
			my $log_message = $2;

			my $facility = int($pri / 8);
			my $severity = $pri % 8;

			print $fout "\"$remote_ip\",\"$facility\",\"$severity\",\"$log_message\"\n";
		} else {
			my $first_byte = ord(substr($message, 0, 1));
			if($first_byte == 0) {
				# I don't understand what's going on here
				print $fout (unpack 'H*', $message), "\n";
				print $fout (sprintf '%v02X', $message), "\n";
				# $message = substr($message, 1);
				# print $fout "$message\n";
			} else {
				print $fout "\"$remote_ip\",\"\",\"\",\"Invalid syslog message: $message\"\n";
			}
		}
	}
	$fout->flush();
}

# Close socket (unreachable in an infinite loop)
$socket->close();
